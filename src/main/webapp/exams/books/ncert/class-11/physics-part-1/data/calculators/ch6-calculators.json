{"q6-cm-calculator":{"title":"Centre of Mass (2 Particles)","formula_display":"x_CM = (m₁x₁ + m₂x₂) / (m₁ + m₂)","inputs":[{"id":"m1","label":"Mass m₁","unit":"kg","default":1,"min":0.1,"max":50,"step":0.1},{"id":"x1","label":"Position x₁","unit":"m","default":0,"min":-10,"max":10,"step":0.1},{"id":"m2","label":"Mass m₂","unit":"kg","default":35.5,"min":0.1,"max":100,"step":0.1},{"id":"x2","label":"Position x₂","unit":"m","default":1.27,"min":0,"max":5,"step":0.01}],"compute":"(m1 * x1 + m2 * x2) / (m1 + m2)","output":{"label":"Centre of Mass x_CM","unit":"m","precision":4},"plot":{"vary":"m2","range":[1,50],"points":50,"xLabel":"m₂ (kg)","yLabel":"x_CM (m)"}},"q6-cross-product":{"title":"Cross Product & Triangle Area","formula_display":"|a × b| = |a||b|sin θ,  Triangle = ½|a × b|","inputs":[{"id":"magA","label":"|a|","unit":"","default":5,"min":0.1,"max":20,"step":0.1},{"id":"magB","label":"|b|","unit":"","default":4,"min":0.1,"max":20,"step":0.1},{"id":"theta","label":"Angle θ","unit":"°","default":90,"min":0,"max":180,"step":1}],"compute":"magA * magB * sin(theta * 3.14159265 / 180) / 2","output":{"label":"Triangle Area (½|a × b|)","unit":"","precision":4},"plot":{"vary":"theta","range":[0,180],"points":60,"xLabel":"θ (°)","yLabel":"Triangle Area"}},"q6-rotational-dynamics":{"title":"Solid Cylinder — I, L, KE","formula_display":"I = ½mR²,  L = Iω,  KE = ½Iω²","inputs":[{"id":"mass","label":"Mass m","unit":"kg","default":20,"min":0.1,"max":100,"step":0.5},{"id":"radius","label":"Radius R","unit":"m","default":0.25,"min":0.01,"max":2,"step":0.01},{"id":"omega","label":"Angular speed ω","unit":"rad/s","default":100,"min":0,"max":200,"step":1}],"compute":"0.5 * 0.5 * mass * radius * radius * omega * omega","output":{"label":"Rotational KE","unit":"J","precision":2},"plot":{"vary":"omega","range":[0,150],"points":60,"xLabel":"ω (rad/s)","yLabel":"KE (J)"}}}
