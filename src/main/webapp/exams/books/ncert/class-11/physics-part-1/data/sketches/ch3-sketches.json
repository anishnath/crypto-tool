    "projectile-motion-2d": {
        "type": "projectile-motion",
        "title": "2D Projectile Motion Simulator",
        "description": "Launch projectile at any angle and velocity",
        "params": {
            "initial_velocity": 20,
            "launch_angle": 45,
            "gravity": 9.8,
            "initial_height": 0
        },
        "controls": {
            "adjustable": [
                "initial_velocity",
                "launch_angle",
                "initial_height"
            ],
            "animation": true,
            "show_trajectory": true,
            "show_velocity_components": true,
            "show_graphs": [
                "x-t",
                "y-t",
                "vx-t",
                "vy-t"
            ],
            "multiple_projectiles": true
        },
        "educational_notes": [
            "Horizontal velocity = constant (no air resistance)",
            "Vertical velocity changes due to gravity",
            "Maximum range at 45° (on level ground)",
            "Time of flight = 2v₀ sin θ / g",
            "Range = v₀² sin 2θ / g"
        ],
        "formulas": [
            "x(t) = v₀ cos θ × t",
            "y(t) = v₀ sin θ × t - ½gt²",
            "vₓ(t) = v₀ cos θ",
            "vᵧ(t) = v₀ sin θ - gt",
            "Range = v₀² sin 2θ / g",
            "Max height = (v₀ sin θ)² / 2g",
            "Time of flight = 2v₀ sin θ / g"
        ],
        "presets": [
            {
                "name": "45° Launch",
                "velocity": 20,
                "angle": 45
            },
            {
                "name": "30° Launch",
                "velocity": 20,
                "angle": 30
            },
            {
                "name": "60° Launch",
                "velocity": 20,
                "angle": 60
            },
            {
                "name": "Horizontal Launch",
                "velocity": 20,
                "angle": 0,
                "height": 10
            }
        ]
    },
