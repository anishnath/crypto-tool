{
    "q3-6-vector-addition": {
        "type": "vector-addition",
        "title": "Vector Addition Interactive",
        "description": "Visualize vector addition using triangle and parallelogram methods",
        "params": {
            "vectors": [
                {
                    "id": "a",
                    "magnitude": 5,
                    "angle": 0,
                    "color": "#FF6B6B",
                    "label": "→a"
                },
                {
                    "id": "b",
                    "magnitude": 3,
                    "angle": 60,
                    "color": "#4ECDC4",
                    "label": "→b"
                }
            ],
            "show_resultant": true,
            "show_components": true,
            "method": "triangle"
        },
        "controls": {
            "adjustable": [
                "magnitude",
                "angle"
            ],
            "add_remove_vectors": true,
            "toggle_method": [
                "triangle",
                "parallelogram",
                "component"
            ],
            "show_inequality": true
        },
        "educational_notes": [
            "Triangle inequality: |→a + →b| ≤ |→a| + |→b|",
            "Equality when vectors are parallel",
            "Parallelogram diagonal = resultant",
            "Component method: add x and y separately"
        ],
        "formulas": [
            "|→a + →b| = √(a² + b² + 2ab cos θ)",
            "tan α = (b sin θ)/(a + b cos θ)"
        ]
    },
    "q3-7-null-vector": {
        "type": "vector-addition",
        "title": "Four Vectors Forming Closed Polygon",
        "description": "When four vectors sum to zero, they form a closed quadrilateral",
        "params": {
            "vectors": [
                {
                    "id": "a",
                    "magnitude": 3,
                    "angle": 0,
                    "color": "#FF6B6B",
                    "label": "→a"
                },
                {
                    "id": "b",
                    "magnitude": 4,
                    "angle": 90,
                    "color": "#4ECDC4",
                    "label": "→b"
                },
                {
                    "id": "c",
                    "magnitude": 3,
                    "angle": 180,
                    "color": "#95E1D3",
                    "label": "→c"
                },
                {
                    "id": "d",
                    "magnitude": 4,
                    "angle": 270,
                    "color": "#AA96DA",
                    "label": "→d"
                }
            ],
            "show_resultant": true,
            "show_closed_polygon": true
        },
        "controls": {
            "adjustable": [
                "magnitude",
                "angle"
            ],
            "auto_close": true,
            "verify_sum_zero": true
        },
        "educational_notes": [
            "→a + →b + →c + →d = 0 means closed polygon",
            "Individual vectors need not be zero",
            "|→a + →c| = |→b + →d| (opposite sides)",
            "→b + →c lies in plane of →a and →d"
        ]
    },
    "q3-8-displacement-path": {
        "type": "displacement-comparison",
        "title": "Three Girls Skating - Different Paths",
        "description": "Same displacement, different path lengths",
        "params": {
            "radius": 200,
            "start_point": "P",
            "end_point": "Q",
            "paths": [
                {
                    "id": "A",
                    "type": "arc",
                    "arc_angle": 180,
                    "color": "#FF6B6B",
                    "label": "Girl A (arc)"
                },
                {
                    "id": "B",
                    "type": "straight",
                    "color": "#4ECDC4",
                    "label": "Girl B (diameter)"
                },
                {
                    "id": "C",
                    "type": "curved",
                    "control_points": [
                        [
                            100,
                            -50
                        ],
                        [
                            300,
                            50
                        ]
                    ],
                    "color": "#95E1D3",
                    "label": "Girl C (curved)"
                }
            ],
            "show_displacement": true,
            "show_path_lengths": true
        },
        "controls": {
            "animate_motion": true,
            "show_comparison_table": true
        },
        "educational_notes": [
            "Displacement = straight line P to Q = 400 m (all same)",
            "Path length varies by route taken",
            "Only Girl B: path length = displacement",
            "Displacement independent of path"
        ],
        "calculations": {
            "displacement": 400,
            "path_A": 628.3,
            "path_B": 400,
            "path_C": 450
        }
    },
    "q3-9-circular-park": {
        "type": "sequential-path",
        "title": "Cyclist in Circular Park",
        "description": "Round trip: O→P→arc→Q→O",
        "params": {
            "radius": 1000,
            "segments": [
                {
                    "type": "radial",
                    "from": "O",
                    "to": "P",
                    "color": "#FF6B6B",
                    "label": "O to P"
                },
                {
                    "type": "arc",
                    "from": "P",
                    "to": "Q",
                    "angle": 90,
                    "color": "#4ECDC4",
                    "label": "Arc P to Q"
                },
                {
                    "type": "radial",
                    "from": "Q",
                    "to": "O",
                    "color": "#95E1D3",
                    "label": "Q to O"
                }
            ],
            "total_time": 10
        },
        "controls": {
            "animate_motion": true,
            "show_displacement": true,
            "show_path_length": true,
            "calculate_speeds": true
        },
        "educational_notes": [
            "Net displacement = 0 (returns to start)",
            "Average velocity = 0",
            "Average speed = total path / time ≠ 0",
            "Path length = 1 + π/2 + 1 = 3.57 km"
        ],
        "calculations": {
            "displacement": 0,
            "path_length": 3.571,
            "avg_velocity": 0,
            "avg_speed": 21.4
        }
    },
