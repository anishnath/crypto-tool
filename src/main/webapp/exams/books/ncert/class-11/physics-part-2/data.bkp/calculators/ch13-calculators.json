{
  "q13-spring-period": {
    "title": "Spring-Mass: T = 2π√(m/k)",
    "formula_display": "T = 2π√(m/k),  ω = √(k/m)",
    "inputs": [
      {"id": "m", "label": "Mass m", "unit": "kg", "default": 3, "min": 0.1, "max": 50, "step": 0.1},
      {"id": "k", "label": "Spring constant k", "unit": "N/m", "default": 1200, "min": 10, "max": 5000, "step": 50}
    ],
    "compute": "2 * 3.14159 * Math.sqrt(m / k)",
    "output": {"label": "Period T", "unit": "s", "precision": 3}
  },
  "q13-shm-vmax-amax": {
    "title": "SHM: v_max = ωA,  a_max = ω²A",
    "formula_display": "ω = √(k/m),  f = ω/(2π)",
    "inputs": [
      {"id": "k", "label": "k", "unit": "N/m", "default": 1200, "min": 10, "max": 5000, "step": 50},
      {"id": "m", "label": "m", "unit": "kg", "default": 3, "min": 0.1, "max": 50, "step": 0.1},
      {"id": "A", "label": "Amplitude A", "unit": "m", "default": 0.02, "min": 0.001, "max": 0.5, "step": 0.001}
    ],
    "compute": "Math.sqrt(k/m) * A",
    "output": {"label": "v_max", "unit": "m/s", "precision": 2}
  },
  "q13-pendulum-period": {
    "title": "Simple Pendulum: T = 2π√(L/g)",
    "formula_display": "T = 2π√(L/g)",
    "inputs": [
      {"id": "L", "label": "Length L", "unit": "m", "default": 1, "min": 0.1, "max": 10, "step": 0.1},
      {"id": "g", "label": "g", "unit": "m/s²", "default": 9.8, "min": 9.5, "max": 10, "step": 0.1}
    ],
    "compute": "2 * 3.14159 * Math.sqrt(L / g)",
    "output": {"label": "Period T", "unit": "s", "precision": 3}
  },
  "q13-spring-constant-from-scale": {
    "title": "Spring Constant from Scale: k = F/x",
    "formula_display": "k = (max_load × g) / scale_length",
    "inputs": [
      {"id": "maxLoad", "label": "Max scale load", "unit": "kg", "default": 50, "min": 1, "max": 200, "step": 1},
      {"id": "scaleLen", "label": "Scale length", "unit": "m", "default": 0.2, "min": 0.05, "max": 0.5, "step": 0.01},
      {"id": "T", "label": "Measured period T", "unit": "s", "default": 0.6, "min": 0.1, "max": 5, "step": 0.1}
    ],
    "compute": "T * T * maxLoad * 9.8 * 9.8 / (scaleLen * 4 * 3.14159 * 3.14159)",
    "output": {"label": "Weight (from T²=4π²m/k)", "unit": "N", "precision": 0}
  }
}
