	<script type="text/javascript">
		let currentOperation = 'validate';
		let parsedXML = null;

		$(document).ready(function() {
			// Check if required libraries are loaded
			setTimeout(function() {
				if (typeof DOMParser === 'undefined') {
					showStatus('Warning: XML parser not available. Please refresh the page.', 'error');
				}
			}, 1000);

			// Operation tab handlers
			$('.operation-tab').click(function() {
				$('.operation-tab').removeClass('active');
				$(this).addClass('active');
				currentOperation = $(this).data('operation');

				// Show/hide diff panel
				if (currentOperation === 'diff') {
					$('.diff-panel').addClass('active');
					$('.editor-panel.output').hide();
				} else {
					$('.diff-panel').removeClass('active');
					$('.editor-panel.output').show();
				}

				// Process based on operation
				processXML();
			});

			// Input change handler
			$('#xmlInput').on('input', function() {
				if (currentOperation !== 'diff') {
					debounce(processXML, 500)();
				}
			});

			// Initial process
			setTimeout(function() {
				processXML();
			}, 500);
		});

		let debounceTimer;
		function debounce(func, delay) {
			return function() {
				clearTimeout(debounceTimer);
				debounceTimer = setTimeout(func, delay);
			};
		}

		function processXML() {
			const input = $('#xmlInput').val();

			if (!input.trim() && currentOperation !== 'generate') {
				showStatus('Please enter XML data', 'info');
				$('#xmlOutput').html('');
				return;
			}

			try {
				switch(currentOperation) {
					case 'validate':
						validateXML(input);
						break;
					case 'prettify':
						prettifyXML(input);
						break;
					case 'minify':
						minifyXML(input);
						break;
					case 'highlight':
						highlightXML(input);
						break;
					case 'json':
						convertToJSON(input);
						break;
					case 'yaml':
						convertToYAML(input);
						break;
					case 'csv':
						convertToCSV(input);
						break;
					case 'base64encode':
						base64EncodeXML(input);
						break;
					case 'base64decode':
						base64DecodeXML(input);
						break;
					case 'generate':
						generateRandomXML();
						break;
					case 'diff':
						// Handled by button click
						break;
				}
			} catch (error) {
				showStatus('Error: ' + error.message, 'error');
				$('#xmlOutput').html('');
			}
		}

		function parseXML(xmlString) {
			const parser = new DOMParser();
			const xmlDoc = parser.parseFromString(xmlString, 'text/xml');

			// Check for parsing errors
			const parserError = xmlDoc.getElementsByTagName('parsererror');
			if (parserError.length > 0) {
				throw new Error('XML parsing error: ' + parserError[0].textContent);
			}

			return xmlDoc;
		}

		function validateXML(input) {
			try {
				parseXML(input);
				showStatus('Valid XML! No errors found.', 'success');
				displayOutput(input, 'markup', 'XML is valid');
			} catch (error) {
				showStatus('Invalid XML: ' + error.message, 'error');
				$('#xmlOutput').html('');
			}
		}

		function prettifyXML(input) {
			const xmlDoc = parseXML(input);
			const prettified = formatXML(xmlDoc, 2);
			displayOutput(prettified, 'markup', 'Prettified XML');
			showStatus('XML prettified successfully', 'success');
		}

		function minifyXML(input) {
			const xmlDoc = parseXML(input);
			const serializer = new XMLSerializer();
			let minified = serializer.serializeToString(xmlDoc);
			// Remove whitespace between tags
			minified = minified.replace(/>\s+</g, '><');
			displayOutput(minified, 'markup', 'Minified XML');
			showStatus('XML minified successfully', 'success');
		}

		function highlightXML(input) {
			displayOutput(input, 'markup', 'Highlighted XML');
			showStatus('XML highlighted', 'success');
		}

		function formatXML(xmlDoc, indent) {
			const serializer = new XMLSerializer();
			let xmlString = serializer.serializeToString(xmlDoc);

			// Format with indentation
			let formatted = '';
			let indentLevel = 0;
			const lines = xmlString.split(/>\s*</);

			lines.forEach(function(line, index) {
				if (index > 0) line = '<' + line;
				if (index < lines.length - 1) line = line + '>';

				// Check if closing tag
				if (line.match(/^<\//)) {
					indentLevel--;
				}

				// Add indentation
				formatted += '  '.repeat(Math.max(0, indentLevel)) + line;

				if (index < lines.length - 1) {
					formatted += '\n';
				}

				// Check if opening tag (not self-closing and not closing)
				if (line.match(/^<[^\/][^>]*[^\/]>/) && !line.match(/^<\?/)) {
					indentLevel++;
				}
			});

			return formatted;
		}

		function xmlToObject(xmlNode) {
			let obj = {};

			// Handle attributes
			if (xmlNode.attributes && xmlNode.attributes.length > 0) {
				obj['@attributes'] = {};
				for (let i = 0; i < xmlNode.attributes.length; i++) {
					const attr = xmlNode.attributes[i];
					obj['@attributes'][attr.name] = attr.value;
				}
			}

			// Handle child nodes
			if (xmlNode.hasChildNodes()) {
				for (let i = 0; i < xmlNode.childNodes.length; i++) {
					const child = xmlNode.childNodes[i];

					if (child.nodeType === 3) { // Text node
						const text = child.nodeValue.trim();
						if (text) {
							if (Object.keys(obj).length === 0 || (Object.keys(obj).length === 1 && obj['@attributes'])) {
								return text;
							}
							obj['#text'] = text;
						}
					} else if (child.nodeType === 1) { // Element node
						const childObj = xmlToObject(child);
						const nodeName = child.nodeName;

						if (obj[nodeName]) {
							if (!Array.isArray(obj[nodeName])) {
								obj[nodeName] = [obj[nodeName]];
							}
							obj[nodeName].push(childObj);
						} else {
							obj[nodeName] = childObj;
						}
					}
				}
			}

			return obj;
		}

		function convertToJSON(input) {
			const xmlDoc = parseXML(input);
			const obj = xmlToObject(xmlDoc.documentElement);
			const result = {};
			result[xmlDoc.documentElement.nodeName] = obj;
			const json = JSON.stringify(result, null, 2);
			displayOutput(json, 'json', 'JSON Output');
			showStatus('Converted to JSON successfully', 'success');
		}

		function convertToYAML(input) {
			if (typeof jsyaml === 'undefined') {
				showStatus('Error: YAML library not loaded. Please refresh the page.', 'error');
				return;
			}
			const xmlDoc = parseXML(input);
			const obj = xmlToObject(xmlDoc.documentElement);
			const result = {};
			result[xmlDoc.documentElement.nodeName] = obj;
			const yaml = jsyaml.dump(result, {
				indent: 2,
				lineWidth: 120,
				noRefs: true
			});
			displayOutput(yaml, 'yaml', 'YAML Output');
			showStatus('Converted to YAML successfully', 'success');
		}

		function convertToCSV(input) {
			const xmlDoc = parseXML(input);
			const obj = xmlToObject(xmlDoc.documentElement);

			// Flatten nested objects
			function flattenObject(ob, prefix) {
				if (prefix === undefined) prefix = '';
				var toReturn = {};

				for (var i in ob) {
					if (!ob.hasOwnProperty(i)) continue;

					if ((typeof ob[i]) == 'object' && ob[i] !== null && !Array.isArray(ob[i])) {
						var flatObject = flattenObject(ob[i], prefix + i + '.');
						for (var x in flatObject) {
							if (!flatObject.hasOwnProperty(x)) continue;
							toReturn[prefix + x] = flatObject[x];
						}
					} else if (Array.isArray(ob[i])) {
						toReturn[prefix + i] = ob[i].join('; ');
					} else {
						toReturn[prefix + i] = ob[i];
					}
				}
				return toReturn;
			}

			// Convert to array format for CSV
			let dataArray = [];
			if (Array.isArray(obj)) {
				dataArray = obj.map(function(item) {
					return flattenObject(item);
				});
			} else if (typeof obj === 'object') {
				dataArray = [flattenObject(obj)];
			} else {
				throw new Error('XML must be convertible to object or array for CSV conversion');
			}

			const csv = Papa.unparse(dataArray);
			displayOutput(csv, 'csv', 'CSV Output');
			showStatus('Converted to CSV successfully', 'success');
		}

		function base64EncodeXML(input) {
			const encoded = btoa(unescape(encodeURIComponent(input)));
			displayOutput(encoded, 'text', 'Base64 Encoded');
			showStatus('XML encoded to Base64', 'success');
		}

		function base64DecodeXML(input) {
			try {
				const decoded = decodeURIComponent(escape(atob(input.trim())));
				displayOutput(decoded, 'markup', 'Base64 Decoded XML');
				showStatus('Base64 decoded successfully', 'success');
			} catch (error) {
				showStatus('Invalid Base64 input', 'error');
			}
		}

