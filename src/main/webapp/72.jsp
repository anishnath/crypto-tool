    <script>
        function calculate() {
            var interestRate = document.getElementById("interest-rate").value;
            var years = Math.round(72 / interestRate * 100) / 100;
            var result = document.getElementById("result");
            result.innerHTML = "It will take approximately " + years + " years to double your investment at a " + interestRate + "% interest rate.";
        }
    </script>

